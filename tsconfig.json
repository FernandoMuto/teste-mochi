{
  "compilerOptions": {
    "lib": ["es2017"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true, 
    "target": "es2017",
    "outDir": "lib",
    "baseUrl": "./",                       /* Base directory to resolve non-absolute module names. */
    "paths": {
       "@modules/*": ["./src/modules/*"],
       "@config/*": ["./src/config/*"], 
       "@utils/*": ["./src/utils/*"]
    }, 
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}

